        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/main2</item>
        <item name="android:textSize">@dimen/default_font_size_22</item>
        <item name="android:fontFamily">@font/nanumgothic</item>
    </style>

    <style name="TextView_Style5" parent="Theme.AppCompat.Light">
