        <item name="android:textSize">@dimen/default_font_size_16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">-0.05</item>
    </style>

    <style name="Subs_TextStyle2" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_4</item>
        <item name="android:layout_marginBottom">@dimen/margin_16</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/font5</item>
        <item name="android:textSize">@dimen/default_font_size_16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">-0.05</item>
    </style>


</resources>

