<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="25dip"
    android:paddingRight="25dip"
    android:orientation="vertical"
    android:gravity="center" >

    <LinearLayout
        android:id="@+id/dialog_frame"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
	        
	    <!-- android:paddingBottom="12dip" -->
	    <RelativeLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:background="@drawable/bg_popup_no_top"
	    	android:orientation="vertical"
	    	android:paddingTop="32dp" >
	        <TextView
		        android:id="@+id/dialog_message1"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:textSize="15dp"
		        android:textColor="#FF292929"
		        android:paddingBottom="15dp" />
	        
	        <View
	            android:layout_width="match_parent"
		        android:layout_height="12dp"
		        android:layout_below="@id/dialog_message1" />
	        
	        <!-- android:layout_marginTop="7dip" -->
		    <TextView
		        android:id="@+id/dialog_message2"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_below="@id/dialog_message1"
		        android:gravity="center"
		        android:textSize="13dp"
		        android:textColor="#EB4B8C"
		        android:paddingBottom="18dp" />
	    </RelativeLayout>
	    
	    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="#b4b4b4" />
	    
	    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dip"
            android:background="@drawable/bg_popup_bottom_nor"
            android:orientation="horizontal"
            android:padding="10dip" >

            <Button
                android:id="@+id/dialog_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_popup_btn_selector"
                android:text="@string/string_cancel"
                android:textColor="@color/color_btn_text_black_dim"
                android:textSize="14dp"
                android:typeface="sans" />

            <Button
                android:id="@+id/dialog_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:layout_weight="1"
                android:background="@drawable/btn_popup_btn_selector"
                android:text="@string/string_ok"
                android:textColor="@color/color_btn_text_black_dim"
                android:textSize="14dp"
                android:typeface="sans" />
        </LinearLayout>	    
	</LinearLayout>
	
</LinearLayout>