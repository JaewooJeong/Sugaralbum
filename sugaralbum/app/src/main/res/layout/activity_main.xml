<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/coordinatorLayout"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<!-- 상단 앱바 -->
	<com.google.android.material.appbar.AppBarLayout
		android:id="@+id/appBarLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:elevation="4dp">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="56dp"
			android:padding="8dp">

			<ImageView
				android:id="@+id/imageView1"
				android:layout_width="42dp"
				android:layout_height="42dp"
				android:background="?attr/selectableItemBackgroundBorderless"
				android:clickable="true"
				android:focusable="true"
				android:padding="8dp"
				android:src="@drawable/ic_menu_open"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				app:tint="@color/chat_text_primary" />

			<TextView
				android:id="@+id/title_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/app_name"
				android:textColor="@color/chat_text_primary"
				android:textSize="20sp"
				android:textStyle="bold"
				android:gravity="center"
				app:layout_constraintStart_toEndOf="@+id/imageView1"
				app:layout_constraintEnd_toStartOf="@+id/send"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toBottomOf="parent" />

			<ImageView
				android:id="@+id/send"
				android:layout_width="42dp"
				android:layout_height="42dp"
				android:background="?attr/selectableItemBackgroundBorderless"
				android:clickable="true"
				android:focusable="true"
				android:padding="8dp"
				android:src="@drawable/ic_round_create"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				app:tint="@color/chat_text_primary" />

		</androidx.constraintlayout.widget.ConstraintLayout>

	</com.google.android.material.appbar.AppBarLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:weightSum="4"
		app:layout_behavior="@string/appbar_scrolling_view_behavior">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@color/font3"
			android:layout_weight="1.8">

			<com.sugarmount.common.view.TouchImageView
				android:id="@+id/selectImage"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_alignParentTop="true"
				android:src="@drawable/ic_logo_w"
				android:scaleType="centerCrop"/>

			<View
				android:layout_alignParentBottom="true"
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@color/black"/>

			<ImageView
				android:visibility="gone"
				android:id="@+id/selectRestore"
				android:layout_width="@dimen/default_icon_size"
				android:layout_height="@dimen/default_icon_size"
				android:layout_marginLeft="@dimen/margin_8"
				android:layout_alignParentBottom="true"
				android:layout_alignParentStart="true"
				android:scaleX="0.9"
				android:scaleY="0.9"
				android:paddingBottom="@dimen/margin_8"
				android:paddingTop="@dimen/margin_8"
				android:paddingEnd="@dimen/margin_2"
				android:background="@drawable/circle_restore"
				android:src="@drawable/ic_round_restore_24"/>

			<ImageView
				android:visibility="gone"
				android:id="@+id/selectRotateLeft"
				android:layout_width="@dimen/default_icon_size"
				android:layout_height="@dimen/default_icon_size"
				android:layout_above="@+id/selectRestore"
				android:layout_marginLeft="@dimen/margin_8"
				android:scaleX="0.9"
				android:scaleY="0.9"
				android:paddingBottom="@dimen/margin_8"
				android:paddingTop="@dimen/margin_8"
				android:background="@drawable/circle_restore"
				android:src="@drawable/ic_round_rotate_left"/>

			<ImageView
				android:visibility="gone"
				android:id="@+id/selectRotateRight"
				android:layout_width="@dimen/default_icon_size"
				android:layout_height="@dimen/default_icon_size"
				android:layout_above="@+id/selectRotateLeft"
				android:layout_marginLeft="@dimen/margin_8"
				android:scaleX="0.9"
				android:scaleY="0.9"
				android:paddingBottom="@dimen/margin_8"
				android:paddingTop="@dimen/margin_8"
				android:background="@drawable/circle_restore"
				android:src="@drawable/ic_round_rotate_right_24"/>

			<ImageView
				android:id="@+id/resetSelected"
				android:layout_width="@dimen/default_icon_size"
				android:layout_height="@dimen/default_icon_size"
				android:scaleX="0.9"
				android:scaleY="0.9"
				android:paddingBottom="@dimen/margin_8"
				android:paddingTop="@dimen/margin_8"
				android:background="@drawable/circle_restore"
				android:layout_alignParentEnd="true"
				android:layout_alignParentBottom="true"
				android:layout_marginBottom="@dimen/margin_8"
				android:layout_marginEnd="@dimen/margin_8"
				android:src="@drawable/ic_round_cancel"/>

		</RelativeLayout>

		<LinearLayout
			android:id="@+id/llImageList"
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="2.2">

			<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/recycler_view"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				app:layoutManager="GridLayoutManager"
				app:spanCount="4"
				app:reverseLayout="false"/>

		</LinearLayout>

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<FrameLayout
				android:id="@+id/ad_view_container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"/>

		</androidx.constraintlayout.widget.ConstraintLayout>

	</LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>


