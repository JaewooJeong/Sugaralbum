<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.location.network"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.flash"
        android:required="false" />

    <uses-permission android:name="com.google.android.gms.permission.AD_ID" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.BROADCAST_STICKY" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL"
        tools:ignore="ProtectedPermissions" />

    <application
        android:name="com.sugarmount.sugaralbum.GlobalApplication"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:requestLegacyExternalStorage="true"
        android:resizeableActivity="false"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name=".ActivityEmpty"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            tools:ignore="LockedOrientationActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityMain"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            tools:ignore="LockedOrientationActivity">
        </activity>
        <activity
            android:name=".ActivityIntro"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".ActivityInformation"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            tools:ignore="LockedOrientationActivity" />

        <activity
            android:name="com.sugarmount.sugarcamera.story.movie.MovieEditMainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            tools:ignore="LockedOrientationActivity" />

        <activity android:name="com.sugarmount.sugarcamera.PermissionGrantActivity"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name="com.lg.das.HybridWebView"
            android:configChanges="orientation|screenSize"
            android:theme="@android:style/Theme.Light.NoTitleBar" />


        <!-- Service -->
        <service
            android:name="com.kiwiple.mediaframework.ffmpeg.FFmpegService"
            android:process="com.kiwiple.mediaframework.ffmpeg"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.kiwiple.mediaframework.ffmpeg.IFFmpegService" />
            </intent-filter>
        </service>
        <service
            android:name="com.sugarmount.sugarcamera.story.service.VideoCreationService"
            android:exported="false" />
        <service
            android:name="com.sugarmount.sugarcamera.story.service.StoryAnalysisMusicForegroundService" />
        <service
            android:name="com.sugarmount.sugarcamera.story.service.UplusStorySavingService" />
        <service
            android:name="com.kiwiple.mediaframework.ffmpeg.TestService"
            android:exported="false" >
        </service>


        <!-- provider -->
        <provider
            android:name="com.sugarmount.sugarcamera.story.database.TvJcamStoryJsonProvider"
            android:authorities="com.sugarmount.sugarcamera.tvjjson"
            android:exported="true"
            android:multiprocess="true" />
        <provider
            android:name="com.kiwiple.scheduler.database.uplus.TvJcamAnalysisProvider"
            android:authorities="com.sugarmount.sugarcamera.tvjanalysis"
            android:exported="true"
            android:multiprocess="true" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_app_id"/>

        <meta-data
            android:name="com.google.android.gms.ads.AD_MANAGER_APP"
            android:value="true"/>
    </application>
</manifest>
