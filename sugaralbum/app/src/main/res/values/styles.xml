    <style name="TextView_Style6" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/font1</item>
    </style>

    <style name="Subs_ImageStyle1" parent="Theme.AppCompat.Light">
