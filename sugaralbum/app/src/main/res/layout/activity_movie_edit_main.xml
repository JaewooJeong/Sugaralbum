<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/kiwipleStoryEditMainLayout"
    android:keepScreenOn="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sugarmount.sugarcamera.story.movie.MovieEditMainActivity"
    android:background="@color/black">

    <!-- AppBarLayout - 미리보기 -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_icon_size">

        <RelativeLayout
            android:id="@+id/MovieEditMainTitleArea"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_view_height"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageView1"
                    style="@style/ImageView_BackButton"/>

                <TextView
                    android:id="@+id/toolbarTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/imageView1"
                    android:layout_toStartOf="@+id/send"
                    android:gravity="center"
                    android:text="@string/string_menu_preview"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/default_font_size_24"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/send"
                    android:src="@drawable/ic_baseline_golf_course"
                    android:layout_alignParentEnd="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    style="@style/ImageView_BackButton" />
            </RelativeLayout>

        </RelativeLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- 전체 -->
    <RelativeLayout
        android:layout_below="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Preview Section -->
        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/kiwiple_story_movie_edit_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- Preview -->
            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

                <com.sugarmount.sugarcamera.story.views.StoryPreviewLayout
                    android:id="@+id/kiwipleStoryEditPreview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/kiwiple_story_common_preview_height"/>

            </RelativeLayout>

            <!-- Setting -->
            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_below="@+id/relativeLayout1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

                <!-- 제목 -->
                <RelativeLayout
                    android:id="@+id/relativeLayout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.sugarmount.sugarcamera.story.views.StoryEditText
                        android:id="@+id/kiwipleStoryEditMainMainFragmentTitleEditTextEt"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/default_icon_size2"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/margin_32"
                        android:background="@android:color/transparent"
                        android:ellipsize="start"
                        android:focusableInTouchMode="true"
                        android:fontFamily="@font/nanumsquarel"
                        android:hint="@string/string_section_setting_title"
                        android:inputType="text"
                        android:maxLength="30"
                        android:singleLine="true"
                        android:textColorHint="@color/gray"
                        android:textSize="@dimen/default_font_size_20" />

                </RelativeLayout>
                <View
                    android:id="@+id/viewLine1"
                    android:layout_below="@+id/relativeLayout3"
                    android:layout_marginBottom="@dimen/margin_16"
                    android:background="@color/gray"
                    style="@style/ViewStyle_Line3"/>

                <!-- 해상도 -->
                <RelativeLayout
                    android:id="@+id/relativeLayout4"
                    android:layout_below="@+id/viewLine1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/appCompatSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/default_icon_size"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/margin_32"
                        android:spinnerMode="dropdown">

                    </androidx.appcompat.widget.AppCompatSpinner>

                </RelativeLayout>
                <View
                    android:id="@+id/viewLine2"
                    android:layout_below="@+id/relativeLayout4"
                    android:layout_marginBottom="@dimen/margin_16"
                    android:background="@color/gray"
                    style="@style/ViewStyle_Line3"/>

                <!-- 적용 -->
                <RelativeLayout
                    android:visibility="gone"
                    android:layout_below="@+id/relativeLayout4"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="120dp"
                        android:layout_height="@dimen/margin_32"
                        android:background="@color/main1"
                        android:text="@string/string_section_setting_commit"
                        android:textStyle="bold"
                        android:textSize="@dimen/default_font_size_18"
                        android:textColor="@android:color/white"/>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

        <!-- 미디어 생성 페이지 (progress) -->
        <RelativeLayout
            android:visibility="gone"
            android:layout_above="@+id/fl_adplaceholder"
            android:id="@+id/kiwiple_story_movie_save_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- 영상 제작 -->
            <RelativeLayout
                android:id="@+id/kiwiple_story_wave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">

                <com.sugarmount.sugarcamera.story.utils.WaveProgress
                    android:id="@+id/kiwiple_story_save_wave_progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="@color/black"/>

                <TextView
                    android:id="@+id/kiwiple_story_save_wave_percent1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="99dp"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="00"/>

                <!-- 메시지 -->
                <TextView
                    android:id="@+id/kiwiple_story_save_progress_text_view1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/kiwiple_story_story_save_progressbar_text2"
                    android:textColor="@color/black"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/margin_4"
                    android:textStyle="bold"
                    android:textSize="22dp" />
            </RelativeLayout>

        </RelativeLayout>

        <!-- 네이티브 배너 광고 -->
        <FrameLayout
            android:layout_below="@+id/kiwiple_story_movie_edit_layout"
            android:id="@+id/fl_adplaceholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- 적응형 배너 광고 -->
        <FrameLayout
            android:id="@+id/ad_view_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</RelativeLayout>