<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/coordinatorLayout"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<com.google.android.material.appbar.AppBarLayout
		android:id="@+id/appBarLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/black"
		android:fitsSystemWindows="true"
		android:gravity="bottom"
		app:layout_behavior="com.sugarmount.common.utils.FixAppBarLayoutBehavior">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="@dimen/default_icon_size">
			<RelativeLayout
				android:id="@+id/relativeLayout12"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<RelativeLayout
					android:id="@+id/relativeLayout1"
					android:layout_width="@dimen/default_icon_size"
					android:layout_height="@dimen/default_icon_size"
					android:layout_centerVertical="true"
					android:clickable="true"
					android:foreground="?attr/selectableItemBackgroundBorderless"
					android:tint="@color/main1">

					<ImageView
						android:id="@+id/imageView2"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:scaleX="1.4"
						android:scaleY="1.4"
						android:src="@drawable/ic_menu_open"
						app:tint="@color/white" />
				</RelativeLayout>

				<TextView
					android:id="@+id/textView"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_alignParentStart="true"
					android:layout_centerVertical="true"
					android:gravity="center"
					android:text="@string/app_name"
					android:textColor="@color/white"
					android:textSize="24sp"
					android:textStyle="bold" />
			</RelativeLayout>

			<ImageView
				android:id="@+id/send"
				android:src="@drawable/ic_round_create"
				android:layout_alignParentEnd="true"
				android:clickable="true"
				android:background="?attr/selectableItemBackgroundBorderless"
				style="@style/ImageView_BackButton"
				app:tint="@color/gray500" />

		</RelativeLayout>
	</com.google.android.material.appbar.AppBarLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:weightSum="4"
		app:layout_behavior="@string/appbar_scrolling_view_behavior">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@color/font3"
			android:layout_weight="1.8">

			<com.sugarmount.common.view.TouchImageView
				android:id="@+id/selectImage"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_alignParentTop="true"
				android:src="@drawable/ic_logo_w"
				android:scaleType="centerCrop"/>

			<View
				android:layout_alignParentBottom="true"
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@color/black"/>

			<ImageView
				android:visibility="gone"
				android:id="@+id/selectRestore"
				android:layout_width="@dimen/default_icon_size"
				android:layout_height="@dimen/default_icon_size"
				android:layout_marginLeft="@dimen/margin_8"
				android:layout_alignParentBottom="true"
				android:layout_alignParentStart="true"
				android:scaleX="0.9"
				android:scaleY="0.9"
				android:paddingBottom="@dimen/margin_8"
				android:paddingTop="@dimen/margin_8"
				android:paddingEnd="@dimen/margin_2"
				android:background="@drawable/circle_restore"
				android:src="@drawable/ic_round_restore_24"/>

			<ImageView
				android:visibility="gone"
				android:id="@+id/selectRotateLeft"
				android:layout_width="@dimen/default_icon_size"
				android:layout_height="@dimen/default_icon_size"
				android:layout_above="@+id/selectRestore"
				android:layout_marginLeft="@dimen/margin_8"
				android:scaleX="0.9"
				android:scaleY="0.9"
				android:paddingBottom="@dimen/margin_8"
				android:paddingTop="@dimen/margin_8"
				android:background="@drawable/circle_restore"
				android:src="@drawable/ic_round_rotate_left"/>

			<ImageView
				android:visibility="gone"
				android:id="@+id/selectRotateRight"
				android:layout_width="@dimen/default_icon_size"
				android:layout_height="@dimen/default_icon_size"
				android:layout_above="@+id/selectRotateLeft"
				android:layout_marginLeft="@dimen/margin_8"
				android:scaleX="0.9"
				android:scaleY="0.9"
				android:paddingBottom="@dimen/margin_8"
				android:paddingTop="@dimen/margin_8"
				android:background="@drawable/circle_restore"
				android:src="@drawable/ic_round_rotate_right_24"/>

			<ImageView
				android:id="@+id/resetSelected"
				android:layout_width="@dimen/default_icon_size"
				android:layout_height="@dimen/default_icon_size"
				android:scaleX="0.9"
				android:scaleY="0.9"
				android:paddingBottom="@dimen/margin_8"
				android:paddingTop="@dimen/margin_8"
				android:background="@drawable/circle_restore"
				android:layout_alignParentEnd="true"
				android:layout_alignParentBottom="true"
				android:layout_marginBottom="@dimen/margin_8"
				android:layout_marginEnd="@dimen/margin_8"
				android:src="@drawable/ic_round_cancel"/>

		</RelativeLayout>

		<LinearLayout
			android:id="@+id/llImageList"
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="2.2">

			<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/recycler_view"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				app:layoutManager="GridLayoutManager"
				app:spanCount="4"
				app:reverseLayout="false"/>

		</LinearLayout>

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<FrameLayout
				android:id="@+id/ad_view_container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"/>

		</androidx.constraintlayout.widget.ConstraintLayout>

	</LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>


